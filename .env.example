# Solana RPC endpoint
RPC_ENDPOINT=https://api.devnet.solana.com

# Admin wallet private key (JSON array format or base58 encoded)
# JSON array format: [1,2,3,4,...] (64 bytes)
# Base58 format: 5Jv8...xyz
ADMIN_PRIVATE_KEY=your_admin_private_key_here

# Treasury wallet private key (separate wallet for vesting funds)
# If not set, will use ADMIN_PRIVATE_KEY
# Recommended: Use a separate wallet to isolate vesting funds
TREASURY_PRIVATE_KEY=your_treasury_private_key_here

# Custom token mint address
CUSTOM_TOKEN_MINT=your_custom_token_mint_address

# Fee recipient wallet
FEE_WALLET=your_fee_wallet_address

# NFT Collection address (optional - if not set, counts all NFTs)
NFT_COLLECTION_ADDRESS=your_nft_collection_address

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
CUSTOM_TOKEN_MINT=your-token-mint-address
TREASURY_PRIVATE_KEY=[1,2,3,...]
CLAIM_FEE_USD=104

# Vesting configuration
VESTING_DURATION_DAYS=365
VESTING_CLIFF_DAYS=30
BASE_ALLOCATION_AMOUNT=1000000000000
